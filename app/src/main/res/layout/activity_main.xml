<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sviat_minato.uberpriceestimator.MainActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        tools:visibility="invisible" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/text_title_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="UBER"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_title_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:text="Price Estimator"
            android:textColor="#01579b"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_title_main"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <Button
            android:id="@+id/button_get_price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@color/colorAccent"
            android:padding="14dp"
            android:text="Дізнатись ціну"
            android:textColor="@android:color/background_light"
            app:layout_constraintEnd_toEndOf="@+id/edit_to"
            app:layout_constraintStart_toStartOf="@+id/edit_to"
            app:layout_constraintTop_toBottomOf="@+id/edit_to" />

        <EditText
            android:id="@+id/edit_from"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:focusable="false"
            android:hint="Звідки"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingEnd="40dp"
            android:scrollHorizontally="true" />

        <Button
            android:id="@+id/button_clear_from"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/places_ic_clear"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/edit_from"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edit_to"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:focusable="false"
            android:hint="Куди"
            android:inputType="textPersonName"
            app:layout_constraintEnd_toEndOf="@+id/edit_from"
            app:layout_constraintStart_toStartOf="@+id/edit_from"
            app:layout_constraintTop_toBottomOf="@+id/edit_from"
            android:ellipsize="end"
            android:singleLine="true"
            android:paddingEnd="40dp"
            android:scrollHorizontally="true" />

        <Button
            android:id="@+id/button_clear_to"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/places_ic_clear"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="@+id/edit_to"
            app:layout_constraintTop_toTopOf="@+id/edit_to" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
